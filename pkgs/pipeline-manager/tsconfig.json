    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "types": ["@maaxyz/maa-node", "@types/node"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
